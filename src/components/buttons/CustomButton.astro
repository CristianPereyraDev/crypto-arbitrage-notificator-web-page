---
const { id, customClass, onclick } = Astro.props;
---

<div class=`${customClass}`>
  <button
    aria-label="Close"
    id={id ? id : null}
    onclick={onclick ? onclick : null}
    class="rounded bg-teal-600 px-4 py-1 shadow hover:bg-teal-500 hover:text-current"
  >
    <slot />
  </button>
</div>
