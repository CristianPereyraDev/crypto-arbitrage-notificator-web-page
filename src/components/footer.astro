---
import { Icon } from "astro-icon/components";
import type { IFooterLink } from "../types";

interface Props {
  navLinks: Array<IFooterLink>;
}

const { navLinks = [] } = Astro.props;

const links: Array<IFooterLink> = [
  {
    url: "https://cristianpereyradev.github.io/",
    description: "Cristian Pereyra, Full Stack Developer",
    icon: "cristian-pereyra-dev-logo",
  },
  {
    url: "mailto:cristian.pereyra.dev@gmail.com",
    description: "Mi perfil de Linkedin",
    icon: "mdi:mail-outline",
  },
  {
    url: "https://github.com/CristianPereyraDev/",
    description: "Mi perfil de GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.linkedin.com/in/cristian-pereyra-dev/",
    description: "Mi perfil de Linkedin",
    icon: "mdi:linkedin",
  },
];
---

<div
  class="grid h-full grid-cols-1 grid-rows-2 justify-center justify-items-center gap-2 px-2 py-1 sm:grid-cols-2 sm:grid-rows-1"
>
  <ul class="flex h-full gap-4">
    {
      navLinks.map((link) => (
        <li class="h-full grow">
          <a class="flex h-full items-center" href={link.url} target="_blank">
            <span class="font-bold text-sm">{link.description}</span>
            <span>
              <Icon class="text-green-500 text-sm" name={link.icon} />
            </span>
          </a>
        </li>
      ))
    }
  </ul>

  <ul class="flex h-full gap-4">
    {
      links.map((link) => (
        <li class="grow">
          <a class="flex h-full items-center" href={link.url} target="_blank">
            <span class="sr-only">{link.description}</span>
            <Icon class="text-lg lg:text-xl" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</div>
