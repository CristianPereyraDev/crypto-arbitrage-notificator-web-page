---
import { Icon } from "astro-icon";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://github.com/CristianPereyraDev/",
    description: "Mi perfil de GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.linkedin.com/in/cristian-pereyra-dev/",
    description: "Mi perfil de Linkedin",
    icon: "mdi:linkedin",
  },
];
---

<ul class="relative flex gap-4">
  {
    links.map((link) => (
      <li>
        <a
          class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
          href={link.url}
        >
          <span class="sr-only">{link.description}</span>
          <Icon class="h-full" name={link.icon} />
        </a>
      </li>
    ))
  }
</ul>
