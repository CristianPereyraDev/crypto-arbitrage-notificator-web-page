---
import { Icon } from "astro-icon";
import type { FooterLink } from "~/types";
import AppDescriptionText from "./app-description-text.astro";

const links: Array<FooterLink> = [
  {
    url: "mailto:cristian.pereyra.dev@gmail.com",
    description: "Mi perfil de Linkedin",
    icon: "mdi:mail-outline",
  },
  {
    url: "https://github.com/CristianPereyraDev/",
    description: "Mi perfil de GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.linkedin.com/in/cristian-pereyra-dev/",
    description: "Mi perfil de Linkedin",
    icon: "mdi:linkedin",
  },
];
---

<div class="grid h-full grid-cols-2 items-center border-t px-2 py-2">
  <ul class="flex h-full">
    <li>
      <a
        href="/native-app"
        target="_blank"
        class="flex h-full items-center justify-center"
      >
        <span>CryptoARbitrage</span>
        <Icon class="h-full" name="mdi:adb" />
      </a>
    </li>
  </ul>
  <ul class="flex h-full justify-end gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-full items-center rounded-full border-2 border-current p-1"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</div>
