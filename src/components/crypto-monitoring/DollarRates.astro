---
import { Icon } from "astro-icon/components";
---

<div class="ws-content flex items-center justify-center">
  <Icon name="mdi:currency-usd" size={50} />
  <div
    id="USD-ARS-rates"
    class="currency-pair-rates grow"
    data-currency-base="USD"
    data-currency-quote="ARS"
  >
  </div>
  <div class="htmx-indicator grow">
    <Icon name="svg-spinners:blocks-scale" class="" size={25} />
  </div>
</div>

<style is:global>
  .currency-pair-rates {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(8rem, 1fr));
    gap: 0.5rem;
  }
  .currency-pair-rates > .currency-pair-rate {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0 0.8rem;
    justify-items: center;
    font-size: 0.8rem;
  }

  .currency-pair-rates > .currency-pair-rate > span:nth-child(1) {
    grid-column: 1/3;
    font-weight: 700;
    color: rgb(13 148 136);
  }

  .currency-pair-rates > .currency-pair-rate > span:nth-child(n + 2) {
    grid-row: 2;
    color: rgb(255, 255, 255);
  }

  .currency-pair-rates > .currency-pair-rate > span:nth-child(n + 2) > span {
    display: grid;
    justify-content: center;
  }

  .currency-pair-rates
    > .currency-pair-rate
    > span:nth-child(n + 2)
    > span:first-child {
    font-weight: 600;
  }

  .currency-pair-rates > .currency-pair-rate > span:nth-child(2) {
    justify-self: end;
  }

  .currency-pair-rates > .currency-pair-rate > span:nth-child(3) {
    justify-self: start;
  }

  [data-icon="mdi:currency-usd"] {
    color: rgb(121, 164, 113);
  }
</style>
