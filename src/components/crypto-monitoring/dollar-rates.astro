<style is:global>
  ul.currency-pair-rates {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  ul.currency-pair-rates > li {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0 0.8rem;
    justify-items: center;
    font-size: 0.8rem;
  }

  ul.currency-pair-rates > li > span:nth-child(1) {
    grid-column: 1/3;
    font-weight: 700;
  }

  ul.currency-pair-rates > li > span:nth-child(n + 2) {
    grid-row: 2;
    color: aqua;
  }

  ul.currency-pair-rates > li > span:nth-child(2) {
    justify-self: end;
  }

  ul.currency-pair-rates > li > span:nth-child(3) {
    justify-self: start;
  }
</style>

<div
  id="USD-ARS-container"
  class="currency-pair-rates-container"
  data-currency-base="USD"
  data-currency-quote="ARS"
>
</div>
