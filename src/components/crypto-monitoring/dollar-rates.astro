---
import Icon from "astro-icon";
---

<style is:global>
  ul.currency-pair-rates {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  ul.currency-pair-rates > li {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0 0.8rem;
    justify-items: center;
    font-size: 0.8rem;
  }

  ul.currency-pair-rates > li > span:nth-child(1) {
    grid-column: 1/3;
    font-weight: 700;
    color: rgb(13 148 136);
  }

  ul.currency-pair-rates > li > span:nth-child(n + 2) {
    grid-row: 2;
    color: rgb(255, 255, 255);
  }

  ul.currency-pair-rates > li > span:nth-child(n + 2) > span {
    display: grid;
    justify-content: center;
  }

  ul.currency-pair-rates > li > span:nth-child(n + 2) > span:first-child {
    font-weight: 600;
  }

  ul.currency-pair-rates > li > span:nth-child(2) {
    justify-self: end;
  }

  ul.currency-pair-rates > li > span:nth-child(3) {
    justify-self: start;
  }

  [data-icon] {
    color: rgb(87, 255, 87);
  }
</style>

<div class="grid h-16 auto-cols-min grid-flow-col items-center justify-center">
  <Icon name="mdi:currency-usd" class="h-full" />
  <div
    id="USD-ARS-container"
    class="currency-pair-rates-container"
    data-currency-base="USD"
    data-currency-quote="ARS"
  >
  </div>
</div>
