---
import { Icon } from "astro-icon";

import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";

import appScreenshot from "~/assets/app_screenshot.png";
---

<section class="relative h-full bg-black">
  <Starfield />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center lg:grid-cols-2">
    <h2
      class="hidden items-center gap-2 self-center px-4 sm:gap-4 md:flex md:flex-col"
    >
      <Icon
        name="cryptoarbitrage-logo"
        class="hidden text-white md:block md:h-20 lg:h-24"
      />
      <p
        class="gradient-text text-center font-extrabold tracking-tighter text-4xl lg:text-6xl"
      >
        Notificaciones de arbitrages crypto para Android
      </p>
    </h2>
    <div
      id="video-presentation"
      class="grid w-full max-w-3xl px-4 sm:w-6/12 sm:self-auto sm:justify-self-center"
    >
      <video
        width="auto"
        height="100%"
        autoplay
        muted
        playsinline
        loop
        poster={appScreenshot.src}
      >
        <source src="/videos/presentaciÃ³n.mp4" type="video/mp4" />
      </video>
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>
