---
import { Icon } from "astro-icon";

import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";

import appScreenshot from "~/assets/app_screenshot.png";
import AppDescriptionText from "./app-description-text.astro";
---

<section class="relative h-full overflow-hidden bg-black">
  <Starfield />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center lg:grid-cols-2">
    <h2
      class="hidden items-center gap-2 self-center px-4 sm:gap-4 md:flex-col lg:flex"
    >
      <AppDescriptionText />
    </h2>

    <div
      id="video-presentation"
      class="grid h-full h-screen w-full items-center justify-center overflow-hidden px-4 sm:self-auto sm:justify-self-center"
    >
      <video
        style="height: 96vh;"
        width="auto"
        autoplay
        muted
        playsinline
        loop
        poster={appScreenshot.src}
      >
        <source src="/videos/presentaciÃ³n.mp4" type="video/mp4" />
      </video>
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>
